<h1>Editing Book</h1>
<%= form_with model: @book, local: true do |f| %>

<% if @book.errors.any? %>
 <div id="error_explanation">
 <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
  <ul class="errors_message">
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
  <% end %>

 <div class="field">
  <%= f.label :title, {class: 'class_title'} %>
  <%= f.text_field :title %>
 </div>

 <div class="field">
  <%= f.label :body, {class: 'class_body'} %>
  <%= f.text_area :body %>
 </div>

 <div class="action">
  <%= f.submit 'Update Books' %>
 </div>

<% end %>

<%= link_to "Show", book_path(@book.id), class: "show_" %>
 |
<%= link_to "Back", '/books', class: "back" %>