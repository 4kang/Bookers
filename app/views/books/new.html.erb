<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<%= form_with model: @book do |f| %>

<div class="field">
 <%= f.label :title, {class: 'class_title'} %><br>
 <%= f.text_field :title %>
</div>
 

<div class="field">
  <%= f.label :body, {class: 'class_body'} %><br>
  <%= f.text_area :body %>
</div>

<div class="action">
 <%= f.submit 'Create Books' %>
</div>

<% end %>
